<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Banlac" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_0</item>
        <item name="colorPrimaryVariant">@color/primary_30</item>
        <item name="colorOnPrimary">@color/primary_0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_60</item>
        <item name="colorSecondaryVariant">@color/primary_90</item>
        <item name="colorOnSecondary">@color/secondary_0</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_100</item>
        <item name="android:windowLightStatusBar">@color/tertiary_0</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_regular</item>

        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="colorOutline">@color/secondary_30</item>
    </style>

    <style name="Theme.Banlac.NoActionBar"  parent="Theme.Material3.Light.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary_0</item>
        <item name="colorPrimaryVariant">@color/primary_30</item>
        <item name="colorOnPrimary">@color/primary_0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_60</item>
        <item name="colorSecondaryVariant">@color/primary_90</item>
        <item name="colorOnSecondary">@color/secondary_0</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_100</item>
        <item name="android:windowLightStatusBar">@color/tertiary_0</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_regular</item>

        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="colorOutline">@color/secondary_30</item>
    </style>

    <style name="Theme.Banlac.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="link_text">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/primary_100</item>
    </style>

    <style name="login_main_text">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/primary_100</item>
    </style>

    <style name="inputTextStyle" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/primary_100</item>
        <item name="hintTextColor">@color/tertiary_30</item>
        <item name="android:hint">@color/tertiary_30</item>
        <item name="hintTextAppearance">@style/hintTextAppearance</item>
    </style>

    <style name="hintTextAppearance" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="hintTextAppearanceMin" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">10sp</item>
    </style>



</resources>