<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Banlac" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_0</item>
        <item name="colorPrimaryVariant">@color/primary_30</item>
        <item name="colorOnPrimary">@color/primary_0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_60</item>
        <item name="colorSecondaryVariant">@color/primary_90</item>
        <item name="colorOnSecondary">@color/secondary_0</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_100</item>
        <item name="android:windowLightStatusBar">@color/tertiary_0</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_regular</item>

        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
    </style>

    <style name="Theme.Banlac.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Banlac.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>